@model TaskList.Models.Illness

@{
    ViewBag.Title = "IsIll";
}

<h2>Tilføj sygedom</h2>

@using (Html.BeginForm("IsIll", "Information")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Sygdom</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2"}, labelText: "Navn" )
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Opret" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbage til informationssiden", "Index")
</div>
